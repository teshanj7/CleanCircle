<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.IndexPageActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/index_logo"
        android:layout_height="@dimen/index_logo_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196"
        app:srcCompat="@drawable/cleancircle_logo" />

    <TextView
        android:id="@+id/indexSentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="“For a better tomorrow with green”"
        android:textSize="@dimen/index_sentence"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/login_index"
        android:layout_width="@dimen/index_btn_login"
        android:layout_height="@dimen/index_btn_login_height"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/btnBlack"
        android:text="@string/login_index"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indexSentence" />

    <Button
        android:id="@+id/create_btn_index"
        android:layout_width="@dimen/index_btn_createaccount"
        android:layout_height="@dimen/index_btn_create_height"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/btnBlack"
        android:text="@string/create_btn_index"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/login_index"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/login_index"
        app:layout_constraintTop_toBottomOf="@+id/login_index"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>