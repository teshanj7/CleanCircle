<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapFragmentRepo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="49dp">

    <ImageView
        android:id="@+id/reportFormOutline"
        android:layout_width="346dp"
        android:layout_height="568dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_rectangle" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="304dp"
        android:layout_height="536dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/reportFormOutline"
        app:layout_constraintStart_toStartOf="@+id/reportFormOutline"
        app:layout_constraintTop_toTopOf="@+id/reportFormOutline"
        tools:context=".activities.ReportPinLocation" />

    <Button
        android:id="@+id/pinLocation"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/btnBlack"
        android:text="Pin Location"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportFormOutline" />

</androidx.constraintlayout.widget.ConstraintLayout>